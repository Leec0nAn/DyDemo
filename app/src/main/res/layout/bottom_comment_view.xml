<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/comment_sheet_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_bg"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/comment_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/comment_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/close"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/comment_full"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/full_screen"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@id/comment_close"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"/>

<androidx.recyclerview.widget.RecyclerView
        android:id="@+id/comment_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="0dp"
        android:layout_below="@id/comment_count"
        android:layout_above="@id/Divider"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"/>

    <View
        android:id="@+id/Divider"
        android:background="@color/vide_bottom_edit_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/comment_input_row"/>

    <LinearLayout
        android:id="@+id/comment_input_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="10dp"
        android:gravity="center_vertical"
        android:elevation="8dp">

        <LinearLayout
            android:id="@+id/bottom_et_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/comment_bottom_et_bg"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/comment_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:hint="发条评论，和大家一起讨论"
                android:background="@null"
                android:layout_weight="1"
                android:maxEms="8"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="10dp"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="30dp"
                android:src="@mipmap/picture"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:src="@mipmap/bottom_comment_at"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:src="@mipmap/bottom_edit_emoji"/>

        </LinearLayout>

        <TextView
            android:id="@+id/comment_send"
            android:textSize="13sp"
            android:text="发送"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_send_comment_bg"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:visibility="gone"/>

    </LinearLayout>

</RelativeLayout>
