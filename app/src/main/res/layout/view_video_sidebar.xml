<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/video_user_img"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <ImageView
            android:src="@mipmap/add"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/video_like_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/like"
        android:layout_marginTop="10dp"/>
    <ImageView
        android:id="@+id/video_comment_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/comment"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/video_comment_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        />
    <ImageView
        android:id="@+id/video_favorite_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/collect"/>
    <TextView
        android:id="@+id/video_favorite_num"
        android:textSize="13sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/video_share_img"
        android:src="@mipmap/forward"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/video_share_num"
        android:textSize="13sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/video_voice_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/voice"/>
</LinearLayout>