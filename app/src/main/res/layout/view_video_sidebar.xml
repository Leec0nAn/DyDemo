<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/user_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/video_user_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/video_user_ring"
            android:padding="2dp"
            android:scaleType="centerCrop"/>
        <ImageView
            android:src="@mipmap/add"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="35dp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>


    <ImageView
        android:id="@+id/video_like_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/like"
        app:layout_constraintTop_toBottomOf="@id/user_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"/>


    <TextView
        android:id="@+id/video_like_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/video_like_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"/>


    <ImageView
        android:id="@+id/video_comment_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/comment"
        app:layout_constraintTop_toBottomOf="@id/video_like_num"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>


    <TextView
        android:id="@+id/video_comment_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/video_comment_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"/>


    <ImageView
        android:id="@+id/video_favorite_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/collect"
        app:layout_constraintTop_toBottomOf="@id/video_comment_num"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/video_favorite_num"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/video_favorite_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"/>


    <ImageView
        android:id="@+id/video_share_img"
        android:src="@mipmap/forward"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/video_favorite_num"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>


    <TextView
        android:id="@+id/video_share_num"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/video_share_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
